source ${0%/*}/lbuild-fc

# increment this if you have made a change that should force a new kernel
# to build built
#BUILD_GEN=1
#BUILD_GEN=2	# bz19952: remove -lustre tag from kernel RPM names
#BUILD_GEN=3	# bz19975 enable the building of src.rpms by default
BUILD_GEN+=".0"	# TT-107: don't cache the BUILD dir (reset major to 5)

unpack_linux_devel_rpm-fc15() { 
        # don't know why, RedHat include this file. We have to remove it.
    if [ -f usr/src/kernels/${lnxmaj}-${lnxrel}.$TARGET_ARCH/include/linux/autoconf.h ] ; then
        rm -rf usr/src/kernels/${lnxmaj}-${lnxrel}.$TARGET_ARCH/include/linux/autoconf.h
    fi
    return 0
}
